<!DOCTYPE html>
<html>
    
    <head>
        
    </head>
    <body>
        <div>
            <p class="flash"><%= flash[:notice] %></p>
        </div>
        <h1>Books</h1>
        <table>
            <thead>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
            </thead>
            <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to"Show", book_path(book) %></td>
                    <td><%=link_to "Edit", edit_book_path(book)%></td>
                    <td><%= link_to"Destroy",book_path(book), method: :delete, "data-confirm" =>"本当に削除しますか？" %></td>
                </tr>
                <%end%>
            </tbody>
            
            
        </table>

         

        <h2>New book</h2>
    
            <% if @book.errors.any? %>
            <%= @book.errors.count %>errors!!
         <ul>
             <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <%end%>
         </ul>
         
         <%end%>
       
        
        <div class="new-book">
            <%= form_with  model: @book, url: '/books', method: :post do |f| %>
        
         <div class="nbbox">
             <div>Title</div>
         <%=f.text_field:title%>
         </div>
         
         
         <div class="nbbox">
              <div>Body</div>
         <%=f.text_area:body%>
         </div>
         
         
         <div class="submit">
             <%=f.submit'Create Book'%>
         </div>
         

        <%end%>
            
        </div>

        
         

    </body>
 
</html>
