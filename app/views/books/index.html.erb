<!DOCTYPE html>
<html>
    
    <head>
        
    </head>
    <body>
        <h1>Books</h1>
        <table>
            <thead>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
            </thead>
            <tbody>
            <%= @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
            
            
        </table>

         

        <h2>New book</h2>
        
        <div class="new-book">
            <%= form_with  model: @book, url: '/books', method: :post do |f| %>
        
         <div class="nbbox">Title</div>
         <%=f.text_field:title%>
         
         <div class="nbbox">Body</div>
         <%=f.text_area:body%>
         
         <div class="submit">
             <%=f.submit'Create Book'%>
         </div>
         

        <%end%>
            
        </div>

        
         

    </body>
 
</html>
